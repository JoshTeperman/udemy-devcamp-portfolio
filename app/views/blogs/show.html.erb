<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @blog.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @blog.body %>
</p>

<% if logged_in?(:admin) %>
  <%= link_to 'Edit', edit_blog_path(@blog) %>
  <%= link_to 'Delete', blog_path(@blog), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
<%= link_to 'Back', :back %>
